  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register pengguna baru",
        "description": "User melakukan register dengan username dan password",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "sofun1",
                    "description": "Username yang digunakan user"
                  },
                  "password": {
                    "type": "string",
                    "example": "sofun123",
                    "description": "Password untuk akun user"
                  },
                  "profileName": {
                    "type": "string",
                    "example": "Tim Sofun",
                    "description": "Profile name user"
                  }
                },
                "required": ["username", "password", "profileName"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Registrasi berhasil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Sukses"
                    },
                    "message": {
                      "type": "string",
                      "example": "Registrasi berhasil!",
                      "description": "Pesan ketika user berhasil melakukan registrasi"
                    },
                    "data": {
                      "type": "object",
                      "description": "Data registrasi user",
                      "properties": {
                        "username": {
                          "type": "string",
                          "example": "sofun1",
                          "description": "Username yang didaftarkan"
                        },
                        "password": {
                          "type": "object",
                          "example": "$2b$10$ljZJHoo2IfMWf/OvWsRZnOT793jLzQrc5sUT1CQiyLvfNiTSu1rze",
                          "description": "Password untuk akun user"
                        },
                        "profileName": {
                          "type": "string",
                          "example": "Tim Sofun",
                          "description": "Profile name user"
                        },
                        "_id": {
                          "type": "object",
                          "example": "6600ee6604a97571c171d274",
                          "description": "Mongodb ID user"
                        },
                        "__v": {
                          "type": "number",
                          "example": 0,
                          "description": "Mongodb version key"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "User menggunakan spasi pada username",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Gagal"
                    },
                    "message": {
                      "type": "string",
                      "example": "Username tidak boleh menggunakan spasi!",
                      "description": "Pesan error karena user menggunakan spasi pada username"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Username sudah digunakan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Gagal"
                    },
                    "message": {
                      "type": "string",
                      "example": "Username sudah digunakan!",
                      "description": "Pesan error karena username sudah terdaftar"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error pada server",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Error"
                    },
                    "message": {
                      "type": "string",
                      "example": "Terjadi error pada server",
                      "description": "Pesan error karena terjadi error pada server"
